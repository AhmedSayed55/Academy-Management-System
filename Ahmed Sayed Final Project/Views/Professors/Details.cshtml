@model Ahmed_Sayed_Final_Project.Models.Professor

@{
    ViewData["Title"] = "Details";
}

<h1>
    <div class="alert alert-success text-center fw-bold display-3">Details</div>
</h1>

<div>
    <h4>Professor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NationalNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NationalNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bonus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bonus)
        </dd>
    </dl>
</div>
<div>

    <h3>Courses</h3>
<div class="row mb-2">
    <ul class="list-group col-4">
            @foreach (var item in Model.courses)
            {
                        <a class="list-group-item list-group-item-action"
           asp-controller="Courses" asp-action="GetDetailsView" asp-route-id="@item.Id">
                    @item.CourseName (coures code: @item.CourseCode)
                        </a>
            }
    </ul>
</div>


    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success mb-2">Edit</a><br/>
    <a asp-action="Index" class="btn btn-danger">Back to The List</a>
</div>

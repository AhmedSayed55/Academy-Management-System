@model IEnumerable<Ahmed_Sayed_Final_Project.Models.Professor>

@{
    ViewData["Title"] = "Index";
}

<h1 class="alert alert-primary display-3 fw-bold text-center ">Professors</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-2" >Create New</a>
</p>

<form method="get" asp-controller="Professors" asp-action="Index" class="mb-2">
    <div class="input-group">
        <input type="text" name="search" value="@ViewBag.CurrentSearch" />
        <button type="submit" class="btn btn-secondary input-group-append">
            <i class="bi bi-search"></i>
        </button>
@*        <input hidden name="ProfId" value="@ViewBag.CurrentProfId" />
*@    </div>
</form>


<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>*@

              <th>
                <div style="width:50%;float:left;text-align:left">Name</div>
                <div style="width:50%;float:right;text-align:right">
                    <a asp-controller="Professors"
                       asp-action="Index"
                       asp-route-sortType="FullName"
                       asp-route-sortOrder="asc"
                       asp-route-search="@ViewBag.CurrentSearch"
                       style="text-decoration:none">
                        <i class="bi bi-arrow-up"></i>
                    </a>

                    <a asp-controller="Professors"
                       asp-action="Index"
                       asp-route-sortType="FullName"
                       asp-route-sortOrder="dec"
                       asp-route-search="@ViewBag.CurrentSearch"
                       style="text-decoration:none">
                        <i class="bi bi-arrow-down"></i>
                    </a>

                </div>
            </th>

            <th>
                @Html.DisplayNameFor(model => model.NationalNumber)
            </th>
          @*  <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>*@

                 <th>
                <div style="width:50%;float:left;text-align:left">Salary</div>
                <div style="width:50%;float:right;text-align:right">
                    <a asp-controller="Professors"
                       asp-action="Index"
                       asp-route-sortType="Salary"
                       asp-route-sortOrder="asc"
                       asp-route-search="@ViewBag.CurrentSearch"
                       style="text-decoration:none">
                       <i class="bi bi-arrow-up"></i>
                    </a>

                    <a asp-controller="Professors"
                       asp-action="Index"
                       asp-route-sortType="Salary"
                       asp-route-sortOrder="dec"
                       asp-route-search="@ViewBag.CurrentSearch"
                       style="text-decoration:none">
                        <i class="bi bi-arrow-down"></i>
                    </a>

                </div>
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Bonus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NationalNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bonus)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning">
                        <i class="bi bi-list"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash3"></i>
                    </a>
            </td>
        </tr>
}
    </tbody>

    <tfoot>
        <tr><th colspan="2">sum of salary</th><th>@Model.Sum(p=>p.Salary)</th><th></th></tr>
    </tfoot>
</table>
